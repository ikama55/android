<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <EditText
        android:id="@+id/newTitle"
        android:layout_width="229dp"
        android:layout_height="39dp"
        android:background="#fff"
        android:hint="TITRE ..."
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/newBtnTag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_local_offer_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/newBtnMemo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/newBtnMemo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newText"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="44dp"
        android:background="#fff"
        android:gravity="top"
        android:hint="Texte du mÃ©mo ..."
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>